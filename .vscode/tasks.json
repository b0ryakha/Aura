{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test",
            "type": "shell",
            "icon": { "id": "debug" },
            "command": "./externals/moonshine/Moonshine.exe",
            "args": [ "./examples/${input:selectTestPath}", "||", "true" ],
            "dependsOn": [ "Static Analysis" ],
            "problemMatcher": [],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "showReuseMessage": false
            }
        },
        {
            "label": "Static Analysis",
            "type": "shell",
            "command": "C:/Users/${env:USERNAME}/.vscode/extensions/sumneko.lua-3.15.0-win32-x64/server/bin/lua-language-server.exe",
            "args": [ "--check=./" ],
            "problemMatcher": [],
            "presentation": {
                "close": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "Fill inputs.options",
            "type": "shell",
            "command": "./externals/moonshine/Moonshine.exe",
            "args": [ "./externals/input-options-filler/input-options-filler.lua", "./examples", "||", "true" ],
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false
            }
        }
    ],
    "inputs": [
        {
            "id": "selectTestPath",
            "type": "pickString",
            "description": "Select test script",
            "options": [ "checkbox.lua", "explorer.lua", "groupbox.lua", "label.lua", "layout.lua", "listview.lua", "progressbar.lua", "pushbutton.lua", "slider.lua", "textedit.lua", "tooltip.lua", "userinterface.lua" ],
        }
    ]
}